@model inventory_store.Models.List_salary

@{
    ViewBag.Title = "Addsalary";
    
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <br />
        <br />
        <br />
        <hr />
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.s.SalaryAmount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.s.SalaryAmount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.s.SalaryAmount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.s.bonus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.s.bonus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.s.bonus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.s.Month, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.s.Month, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.s.Month, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
        <br />
        <br />
        <table class="table">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.s.SalaryAmount)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.s.bonus)

                </th>
                <th>
                    @Html.DisplayNameFor(model => model.s.Month)

                </th>
                <th>
                    Update

                </th>
                <th>
                    Delete

                </th>


            </tr>
            @foreach (var item in Model.list)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalaryAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.bonus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        <input type="button" title="UPdate" class="btn btn-default" style="background-color: #1E90FF; border-radius: 8px; padding: 8px;" value="UPdate"  />
                    </td>
                    <td>
                        <input type="button" value="Delete" class="btn btn-default" style="background-color: #696969; border-radius: 8px; padding: 8px;"  />
                    </td>

                </tr>
            }

        </table>

}
