@using inventory_store.Models   

@{
    ViewBag.Title = "AddLogin";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-login100" style="background-image: url('~/LoginTemplate/images/bg-01.jpg');">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <form class="login100-form validate-form">
                <span class="login100-form-title p-b-37">
                    Sign In
                </span>





                <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
                    <input class="input100" type="text" name="Username" id="Username" placeholder="username or email">
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
                    <input class="input100" type="password" name="Password" id="Password" placeholder="password">
                    <span class="focus-input100"></span>
                </div>

                <div class="container-login100-form-btn">

                    <a href="/Admin/Home" role="button" class="login100-form-btn">Sign In </a>

                </div>



                <a href="/Account/Register" class=" text-left txt2 hov1">
                    Sign Up
                </a>

                <a href="/Account/ForgotPassword" class="text-right txt2 hov1">
                    Forget Password
                </a>




            </form>


        </div>
    </div>
}